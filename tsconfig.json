{
    "compilerOptions": {
        "strictNullChecks": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "jsx": "preserve",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "target": "es6",
        "lib": [
            "dom", 
            "es7"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
      
    },
    "exclude": [
        "node_modules",
        "lib",
        "es"
    ]
    
}